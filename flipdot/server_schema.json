{
  "openapi": "3.1.0",
  "info": {
    "title": "FastAPI",
    "version": "0.1.0"
  },
  "paths": {
    "/heartbeat": {
      "get": {
        "summary": "Heartbeat",
        "operationId": "heartbeat_heartbeat_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Heartbeat"
                }
              }
            }
          }
        }
      }
    },
    "/config": {
      "get": {
        "summary": "Get Config",
        "operationId": "get_config_config_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Config"
                }
              }
            }
          }
        }
      }
    },
    "/mode": {
      "get": {
        "summary": "Get Current Display Mode",
        "operationId": "get_current_display_mode_mode_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DisplayModeRef"
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Set Current Display Mode",
        "operationId": "set_current_display_mode_mode_patch",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DisplayModeRef"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DisplayModeRef"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/state": {
      "get": {
        "summary": "Get State",
        "operationId": "get_state_state_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StateObject"
                }
              }
            }
          }
        }
      }
    },
    "/state/invert": {
      "post": {
        "summary": "Invert Display Colors",
        "operationId": "invert_display_colors_state_invert_post",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StateObject"
                }
              }
            }
          }
        }
      }
    },
    "/state/errors": {
      "delete": {
        "summary": "Clear Errors",
        "operationId": "clear_errors_state_errors_delete",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StateObject"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Config": {
        "properties": {
          "fonts": {
            "$ref": "#/components/schemas/FontList"
          },
          "modes": {
            "items": {
              "$ref": "#/components/schemas/DisplayModeRef"
            },
            "type": "array",
            "title": "Modes"
          },
          "dimensions": {
            "$ref": "#/components/schemas/Dimensions"
          }
        },
        "type": "object",
        "required": [
          "fonts",
          "modes",
          "dimensions"
        ],
        "title": "Config"
      },
      "Dimensions": {
        "properties": {
          "width": {
            "type": "integer",
            "title": "Width"
          },
          "height": {
            "type": "integer",
            "title": "Height"
          }
        },
        "type": "object",
        "required": [
          "width",
          "height"
        ],
        "title": "Dimensions"
      },
      "DisplayModeRef": {
        "properties": {
          "mode_name": {
            "type": "string",
            "title": "Mode Name"
          },
          "opts": {
            "type": "object",
            "title": "Opts"
          }
        },
        "type": "object",
        "required": [
          "mode_name",
          "opts"
        ],
        "title": "DisplayModeRef",
        "description": "A reference to a display mode."
      },
      "DotFontRef": {
        "properties": {
          "name": {
            "type": "string",
            "title": "Name"
          },
          "line_height": {
            "type": "integer",
            "title": "Line Height"
          },
          "space_width": {
            "type": "integer",
            "title": "Space Width"
          },
          "width_between_chars": {
            "type": "integer",
            "title": "Width Between Chars"
          }
        },
        "type": "object",
        "required": [
          "name",
          "line_height",
          "space_width",
          "width_between_chars"
        ],
        "title": "DotFontRef"
      },
      "FontList": {
        "properties": {
          "fonts": {
            "additionalProperties": {
              "$ref": "#/components/schemas/DotFontRef"
            },
            "type": "object",
            "title": "Fonts"
          }
        },
        "type": "object",
        "required": [
          "fonts"
        ],
        "title": "FontList"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "Heartbeat": {
        "properties": {
          "status": {
            "type": "string",
            "const": "ok",
            "title": "Status",
            "default": "ok"
          }
        },
        "type": "object",
        "title": "Heartbeat"
      },
      "Layout": {
        "properties": {
          "width": {
            "type": "integer",
            "title": "Width"
          },
          "height": {
            "type": "integer",
            "title": "Height"
          }
        },
        "type": "object",
        "required": [
          "width",
          "height"
        ],
        "title": "Layout"
      },
      "StateObject": {
        "properties": {
          "mode": {
            "$ref": "#/components/schemas/DisplayModeRef"
          },
          "errors": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Errors"
          },
          "layout": {
            "$ref": "#/components/schemas/Layout"
          },
          "inverted": {
            "type": "boolean",
            "title": "Inverted"
          },
          "flag": {
            "type": "boolean",
            "title": "Flag"
          }
        },
        "type": "object",
        "required": [
          "mode",
          "errors",
          "layout",
          "inverted",
          "flag"
        ],
        "title": "StateObject"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}