{
  "poll_endpoint": "https://your-server.com/api/flipdot/content",
  "poll_interval_ms": 30000,
  "enable_push": true,
  "push_port": 8080,
  "push_host": "0.0.0.0",
  "auth": {
    "type": "api_key",
    "key": "your-secret-key-here",
    "header_name": "X-API-Key"
  },
  "serial_device": "/dev/ttyUSB0",
  "serial_baudrate": 57600,
  "module_layout": [[1], [2]],
  "module_width": 28,
  "module_height": 7,
  "error_fallback": "keep_last",
  "dev_mode": false,
  "log_level": "INFO"
}
